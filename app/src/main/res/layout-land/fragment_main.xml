<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="4"
    android:background="@color/abisso"
    android:id="@+id/main_land"
    tools:context=".MainActivity$PlaceholderFragment">



    <TextView
        android:id="@+id/section_label"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:textSize="120dp"
        android:gravity="center"
        android:layout_weight="3"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown"
        android:background="@color/terra_terra"
        android:popupBackground="@color/terra"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp"
        android:layout_weight="1">
        <Spinner
            android:id="@+id/time_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:background="@color/terra"
            android:popupBackground="@color/terra"
            android:dropDownSelector="@color/abisso"
            android:spinnerMode="dialog"/>

        <Spinner
            android:id="@+id/level_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:background="@color/terra"
            android:popupBackground="@color/terra"
            android:spinnerMode="dialog"/>

        <Button
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_button"
            android:textSize="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/acqua"/>
    </LinearLayout>
</LinearLayout>
